<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.soapguy.echain.soapcalculator" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/soapguy_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OilChooserActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_oil_chooser"
            android:screenOrientation="portrait" >
        >
        </activity>
        <activity
            android:name=".OilInputActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_oil_input"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing" >
            >
        </activity>
        <activity
            android:name=".OilRecordsActivity"
            android:label="@string/title_activity_oil_records" >
        </activity>
    </application>

</manifest>
